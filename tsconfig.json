{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./build",
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "./scripts",
    "./test",
    "./typechain-types",
    "./ignition",
    "./zkSync",
    "./tasks"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}